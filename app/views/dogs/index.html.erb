<h1>Dogs:</h1>

<%= link_to  "Sort by number of Employees", sort_path %>

<%if @sort%>
    <%@dogs = @dogs.sort_by{|dog| dog.employees.length}%>
    <ul><% @dogs.each do |dog|%>
        <li><%= link_to  dog.name, dog %>, <%=dog.employees.length%> Employees</li>
    <%end%></ul>
<%else%>
    <ul><% @dogs.each do |dog|%>
        <li><%= link_to  dog.name, dog %></li>
    <%end%></ul>

<%end%>


