<h1>Add An Employee</h1>

<% if flash[:message] %>
<h3><%=flash[:message] %></h3>
<%end%>

<%= form_for @employee do |f| %>
<%= f.label :first_name, "First Name:" %> <br>
<%= f.text_field :first_name %><br>
<%= f.label :last_name, "Last Name:" %><br>
<%= f.text_field :last_name %><br>
<%= f.label :alias, "Alias:" %><br>
<%= f.text_field :alias %><br>
<%= f.label :title, "Title:" %><br>
<%= f.text_field :title %><br>
<%= f.label :office, "Office:" %><br>
<%= f.text_field :office %><br>
<%= f.label :dog, "Choose A Dog:" %> <br>
<%= f.collection_select(:dog_id, @dogs, :id, :name) %><br>
<%= f.label :img_url, "Image URL:" %><br>
<%= f.url_field :img_url %><br>
<%= f.submit %>
<% end %>