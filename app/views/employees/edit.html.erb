<h1>Edit Employee</h1>

<% if flash[:message] %>
    <%= flash[:message] %>
<% end %>

<%= form_for @employee do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <%= f.label :alias %>
    <%= f.text_field :alias %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :office %>
    <%= f.text_field :office %>
    <%= f.label :img_url %>
    <%= f.text_field :img_url %>
    <%= f.label :dog %>
    <%= f.collection_select(:dog, @dogs, :id, :name, prompt: "Select 1 Dog") %>
    <%= f.submit "Submit" %>
    <% end %>
